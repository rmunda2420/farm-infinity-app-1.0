<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_fragment_final_submit"
    tools:context=".Fragments.FinalSubmitFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="16dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <EditText
                   android:id="@+id/et_farmer_decl_fragment_final_submit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="textMultiLine"
                   android:enabled="false"
                   android:textSize="12sp"
                   android:scrollbars="vertical"
                   android:gravity="center_vertical"
                   android:background="#FFFFFF"
                   android:padding="8dp"
                   android:textStyle="bold"
                   android:text="@string/farmer_declaration" />

               <CheckBox
                   android:id="@+id/cb_farmer_declaration_fragment_final_submit"
                   android:layout_width="wrap_content"
                   android:layout_height="48dp"
                   android:layout_gravity="end"
                   android:text="@string/lbl_text_farmer"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_officer_decl_fragment_final_submit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone"
               android:layout_gravity="bottom">

               <EditText
                   android:id="@+id/et_officer_decl_fragment_final_submit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="textMultiLine"
                   android:enabled="false"
                   android:textSize="12sp"
                   android:scrollbars="vertical"
                   android:gravity="center_vertical"
                   android:background="#FFFFFF"
                   android:padding="8dp"
                   android:textStyle="bold"
                   android:text="@string/officer_declaration"/>

               <CheckBox
                   android:id="@+id/cb_officer_declaration_fragment_final_submit"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"
                   android:text="OFFICER"/>

           </LinearLayout>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_btn_save_fragment_final_submit"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginTop="40dp"
               android:layout_marginBottom="20dp"
               app:cardBackgroundColor="#FD7D00"
               app:cardCornerRadius="25dp"
               app:cardElevation="2dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/tv_btn_submit_fragment_final_submit"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:text="@string/lbl_submit"
                       android:textColor="@color/black"
                       android:textSize="16sp" />
               </RelativeLayout>

           </androidx.cardview.widget.CardView>

       </LinearLayout>

   </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>